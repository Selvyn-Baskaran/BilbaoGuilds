<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profile</title>
  <link rel="stylesheet" href="/styles.css"/>
  <link rel="stylesheet" href="/css/navbar.css">
  <style>
    /* Profile layout */
    .profile-wrap { max-width: 900px; margin: 2rem auto; padding: 1rem; }
    .card { border: 1px solid #ddd; border-radius: 12px; padding: 1rem; }
    .row { display: grid; grid-template-columns: 220px 1fr; gap: 1rem; }
    @media (max-width: 768px){ .row{ grid-template-columns: 1fr; } }
    .avatar { width: 200px; height: 200px; object-fit: cover; border-radius: 12px; background:#f2f2f2; }
    .muted { font-size: 0.95rem; }
    .field { margin-bottom: 1rem; }
    .field label { display:block; margin-bottom: 0.4rem; font-weight: 600; }
    .field input[type="text"], .field textarea {
      width: 100%; padding: 0.6rem 0.75rem; border: 1px solid #ccc; border-radius: 8px;
    }
    button { padding: 0.6rem 1rem; border: 0; border-radius: 8px; background:#444; color:#fff; cursor:pointer; }
    button:hover { transform: translateY(-1px); transition: 150ms; }
    .meta { display:flex; gap:1rem; flex-wrap: wrap; margin-top: 0.5rem; }
    .chip { background:#7e7e7e; border-radius: 999px; padding: 0.35rem 0.75rem; }

    /* Dark mode overrides */
    body.dark-mode {
      background-color: #121212;
      color: #f0f0f0;
    }
    body.dark-mode .profile-wrap,
    body.dark-mode .card {
      background-color: #1e1e1e !important;
      color: #f0f0f0 !important;
      border-color: #333 !important;
    }
    body.dark-mode .chip,
    body.dark-mode .muted,
    body.dark-mode label,
    body.dark-mode strong {
      color: #f0f0f0 !important;
    }
    body.dark-mode input,
    body.dark-mode textarea {
      background-color: #2a2a2a !important;
      color: #f0f0f0 !important;
      border-color: #444 !important;
    }
    body.dark-mode button {
      background-color: #444 !important;
      color: #fff !important;
    }
    body.dark-mode .avatar {
      background-color: #333 !important;
    }

    /* Optional: spacing for toggle inside profile if you have it */
    .dark-mode-toggle {
      margin: 1rem 0;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }
    /* Default avatar tint per guild */
  body.Fire .avatar {
    filter: hue-rotate(140deg) saturate(1.6) brightness(1.1);
  }

  body.Water .avatar {
    filter: hue-rotate(10deg) saturate(1.8) brightness(1.1);
  }

  body.Earth .avatar {
    filter: hue-rotate(240deg) saturate(1.5) brightness(1.1);
  }

  /* Optional: add smooth transition when page loads */
  .avatar {
    transition: filter 0.3s ease;
  }

  </style>
</head>
<body class="<%= guild %>">

  <%- include('partials/navbar', { user, guild, points, role, online }) %>

  <main class="profile-wrap">
    <h2>Your Profile</h2>
    <div class="card row">
      <div>
        <img class="avatar" src="<%= (profile && profile.avatar) ? profile.avatar : '/uploads/default.png' %>" alt="avatar"/>
        <p class="muted" style="margin-top:0.5rem;">Email: <strong><%= user %></strong></p>
        <div class="meta">
          <span class="chip">Guild: <strong><%= guild %></strong></span>
          <span class="chip">Points: <strong><%= points %></strong></span>
          <span class="chip">Role: <strong><%= role %></strong></span>
        </div>
      </div>
      <div>
        <form method="POST" action="/profile" enctype="multipart/form-data">
          <div class="field">
            <label for="bio">Bio</label>
            <textarea id="bio" name="bio" rows="4" maxlength="500" placeholder="Say something cool..."><%= profile.bio %></textarea>
          </div>

          <div class="field">
            <label for="avatar">Avatar (PNG/JPG/GIF/WEBP, â‰¤5MB)</label>
            <input id="avatar" type="file" name="avatar" accept="image/*"/>
            <% if (profile.avatar) { %>
              <div style="margin-top:0.5rem;">
                <label><input type="checkbox" name="removeAvatar"/> Remove current avatar</label>
              </div>
            <% } %>
          </div>

          <button type="submit">Save Profile</button>
        </form>

        <!-- Dark mode toggle -->
        <div class="dark-mode-toggle">
          <label for="toggle-dark">Dark Mode:</label>
          <input type="checkbox" id="toggle-dark" />
        </div>
      </div>
    </div>
  </main>

  <script>
document.addEventListener('DOMContentLoaded', () => {
  const toggle = document.getElementById('toggle-dark');

  // Apply dark mode if saved
  if (localStorage.getItem('darkMode') === 'enabled') {
    document.body.classList.add('dark-mode');
    if(toggle) toggle.checked = true;
  }

  // Listen for toggle changes
  if(toggle){
    toggle.addEventListener('change', () => {
      if(toggle.checked){
        document.body.classList.add('dark-mode');
        localStorage.setItem('darkMode','enabled');
      } else {
        document.body.classList.remove('dark-mode');
        localStorage.setItem('darkMode','disabled');
      }
    });
  }
});
</script>

</body>
</html>