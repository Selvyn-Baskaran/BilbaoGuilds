<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Socket.IO Game</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="<%= guild %>">

  <%- include('partials/navbar', { points, user , online}) %>

  <main>
    <h2>Join a Room</h2>
    <input id="roomInput" placeholder="Room name" />
    <button onclick="joinRoom()">Join</button>

    <div id="chat" style="display: none;">
      <h3>Messages</h3>
      <div id="messages"></div>
      <input id="msgInput" placeholder="Message" />
      <button onclick="sendMessage()">Send</button>
    </div>
  </main>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();
  let currentRoom = "";

  function joinRoom() {
    const room = document.getElementById("roomInput").value;
    if (!room) return;
    currentRoom = room;
    socket.emit("joinRoom", room);
    document.getElementById("chat").style.display = "block";
  }

  function sendMessage() {
    const msg = document.getElementById("msgInput").value;
    socket.emit("sendMessage", { room: currentRoom, message: msg });
    document.getElementById("msgInput").value = "";
  }

  socket.on("message", (data) => {
    const el = document.createElement("div");
    el.textContent = data;
    document.getElementById("messages").appendChild(el);
  });

  // ðŸ” Live update of online user count
  socket.on("updateOnline", (count) => {
    const onlineEl = document.getElementById("onlineCount");
    if (onlineEl) {
      onlineEl.textContent = count;
    }
  });
</script>

</body>
</html>
