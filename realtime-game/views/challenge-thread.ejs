<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= challenge.title %> - Challenge Thread</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/css/navbar.css">
</head>
<body class="<%= guild %>">

  <%- include('partials/navbar', { user, guild, points, online }) %>

  <main>
    <h2><%= challenge.title %></h2>
    <p><%= challenge.description %></p>

    <h3>Replies</h3>
      <ul class="comment-list">
        <% challenge.comments.forEach(c => { %>
          <li class="comment">
            <img src="<%= c.avatar || '/images/default-avatar.png' %>" class="comment-avatar" alt="<%= c.user %>">
            <div class="comment-body">
              <strong><%= c.user %></strong><br>
              <span><%= c.text %></span>
            </div>
          </li>
        <% }) %>
      </ul>


    <form method="POST" action="/challenges/<%= challenge.id %>/comment">
      <input name="text" placeholder="Add a reply..." required />
      <button type="submit">Post</button>
    </form>
  </main>

</body>
</html>
