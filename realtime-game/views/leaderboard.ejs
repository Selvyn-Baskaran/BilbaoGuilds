<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Leaderboard</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/css/navbar.css">
</head>
<body class="<%= guild %>">

  <%- include('partials/navbar', { user, guild }) %>

  <main>
    <h2>Guild Leaderboard</h2>
    <table>
      <tr>
        <th>Rank</th>
        <th>Guild</th>
        <th>Total Points</th>
      </tr>
      <% sortedGuilds.forEach((guild, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= guild.name %></td>
          <td><%= guild.points %></td>
        </tr>
      <% }) %>
    </table>
  </main>
</body>
</html>

